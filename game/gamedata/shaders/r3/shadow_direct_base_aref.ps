#include "common.h"

float2 main(v2p_shadow_direct_aref I) : SV_Target
{
	float4 C = s_base.Sample(smp_base, I.tc0);
	clip(C.w - def_aref);
	float depth = I.hpos.z;
	float2 moments;
	moments.x = depth;
	float dx = ddx(depth);
	float dy = ddy(depth);
	moments.y = depth * depth + 0.25 * (dx*dx + dy*dy);
	return moments;
}