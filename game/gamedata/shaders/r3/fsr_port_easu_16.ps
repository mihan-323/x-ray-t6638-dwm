AH4 FsrEasuRH(AF2 p) 
{
	return s_image.GatherRed(smp_rtlinear, p);
}

AH4 FsrEasuGH(AF2 p) 
{
	return s_image.GatherGreen(smp_rtlinear, p);
}

AH4 FsrEasuBH(AF2 p) 
{
	return s_image.GatherBlue(smp_rtlinear, p);
}

